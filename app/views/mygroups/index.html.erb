<div class="bodyc">

<h1>Mygroups</h1>
<%= form_for(@mygroup) do |f| %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name , placeholder: "Enter Group Name" %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>


  <div class="actions">
    <%= f.submit "Add", class: 'btn btn-success' %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mygroups.each do |mygroup| %>
    <% if mygroup.user_id == current_user.id %>
      <tr>
        <td><h3><%= mygroup.name %></h3</td>

        <td><%= link_to 'Show', mygroup ,:class=> 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_mygroup_path(mygroup) ,:class=> 'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', mygroup, method: :delete,:class=> 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <% end %>
  </tbody>
</table>
</div>

