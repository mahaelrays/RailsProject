<div style="margin-top:60px;">
<!-- <div class="bodyc"> -->
<h3 class="col-sm-offset-7 col-sm-6" style="color:white;"> Registration </h3>

<div class="col-sm-offset-7 col-sm-3" style="margin-top:50px;">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name ,:class =>"fontcolor" %><br />
    <%= f.text_field :name, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email ,:class =>"fontcolor"  %><br />
    <%= f.email_field :email, :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password  ,:class =>"fontcolor" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <h6 class="fontcolor">characters minimum)</h6></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation  ,:class =>"fontcolor" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-default"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
