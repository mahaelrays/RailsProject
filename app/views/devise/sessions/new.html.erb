<h1 class="col-sm-offset-8 col-sm-9 " style="color:white;" > Yala Notlob </h1>

<div class="col-sm-offset-7 col-sm-3" style="margin-top:50px;">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,:class =>"fontcolor" %><br />
    <%= f.email_field :email, autofocus: true ,:class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password ,:class =>"fontcolor"%><br />
    <%= f.password_field :password, autocomplete: "off",:class => "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,:class =>"fontcolor" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
